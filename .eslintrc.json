{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "describe": "readonly",
        "it": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "comma-dangle": "off",
      "no-unused-vars": "off",
      "quotes": "off",
      "semi": ["warn", "always", { "omitLastInOneLineBlock": true }]
    }
}
